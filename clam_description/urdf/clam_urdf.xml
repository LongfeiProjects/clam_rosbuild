<?xml version="1.0"?>
<!-- Robot Description format of CLAM arm 
     Dave Coleman - davetcoleman@gmail.com
     11/6/2011
     
     Docuementation:

     URDF
     http://www.ros.org/wiki/urdf/XML

     Joint Safety Limits
     http://www.ros.org/wiki/pr2_controller_manager/safety_limits
-->
<robot name="clam_robot">

  <link name="base_link">
    <visual>
      <geometry>
	<mesh filename="package://clam_description/mesh/" />
      </geometry>
    </visual>
    <collision>
      <geometry>
	<mesh filename="package://clam_description/mesh/" />
      </geometry>
    </collision>      
    <inertial>
      <mass value="25" />
      <inertia ixx="1.0" ixy ="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
    </inertial>
  </link>

  <link name="shoulder_pan_link" >
    <visual>
      <geometry>
	<mesh filename="package://clam_description/urdf/arm1.wrl" />
      </geometry>
    </visual>
  </link>

  <link name="shoulder_pitch_link" >
    <visual>
      <geometry>
	<cylinder length="0.6" radius="0.2" />
      </geometry>
    </visual>
  </link>

  <link name="elbow_roll_link" >
    <visual>
      <geometry>
	<cylinder length="0.6" radius="0.2" />
      </geometry>
    </visual>
  </link>

  <link name="elbow_pitch_link" >
    <visual>
      <geometry>
	<cylinder length="0.6" radius="0.2" />
      </geometry>
    </visual>
  </link>

  <link name="wrist_roll_link" >
    <visual>
      <geometry>
	<cylinder length="0.6" radius="0.2" />
      </geometry>
    </visual>
  </link>

  <link name="wrist_pitch_link">
    <visual>
      <geometry>
	<cylinder length="0.6" radius="0.2" />
      </geometry>
    </visual>
  </link>

  <link name="gripper_roll_link">
    <visual>
      <geometry>
	<cylinder length="0.6" radius="0.2" />
      </geometry>
    </visual>
  </link>

  <link name="gripper_grip_link">
    <visual>
      <geometry>
	<cylinder length="0.6" radius="0.2" />
      </geometry>
    </visual>
  </link>


  <!-- J0 -->
  <joint name="shoulder_pan_joint" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_pan_link"/>
    <origin xyz="0.215 0.175 0.0" rpy="0 0 0" />
    <axis xyz="0 0 1" />
    <limit effort="300" velocity="1" lower="-2.61799387799" upper="1.98394848567"/>
    <dynamics damping="50" friction="1"/>
  </joint>

  <!-- J1 -->
  <joint name="shoulder_pitch_joint" type="revolute">
    <parent link="shoulder_pan_link"/>
    <child link="shoulder_pitch_link"/>
    <origin xyz="0 0.078025 0.0" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit effort="300" velocity="1" lower="-1.19962513147" upper="1.89994105047" />
    <dynamics damping="50" friction="1"/>
  </joint>

  <!-- J2 -->
  <joint name="elbow_roll_joint" type="revolute">
    <parent link="shoulder_pitch_link"/>
    <child link="elbow_roll_link"/>
    <origin xyz="0 0.1197 0" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit effort="300" velocity="1" lower="-2.61799387799" upper="0.705631162427" />
    <dynamics damping="50" friction="1"/>
  </joint>

  <!-- J3 -->
  <joint name="elbow_pitch_joint" type="revolute">
    <parent link="elbow_roll_link"/>
    <child link="elbow_pitch_link"/>
    <origin xyz="0 0.036 0" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit effort="300" velocity="1" lower="-1.5953400194" upper="1.93281579274" />
    <dynamics damping="50" friction="1"/>
  </joint>

  <!-- J4 -->
  <joint name="wrist_roll_joint" type="revolute">
    <parent link="elbow_pitch_link"/>
    <child link="wrist_roll_link"/>
    <origin xyz="0 0.2182 0.0081" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit effort="300" velocity="1" lower="-2.61799387799" upper="2.6128806087" />
    <dynamics damping="50" friction="1"/>
  </joint>

  <!-- J5 -->
  <joint name="wrist_pitch_joint" type="revolute">
    <parent link="wrist_roll_link"/>
    <child link="wrist_pitch_link"/>
    <origin xyz="0 0.0686 0" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit effort="300" velocity="1" lower="-1.5953400194" upper="1.98394848567" />
    <dynamics damping="50" friction="1"/>
  </joint>

  <!-- J6 -->
  <joint name="gripper_roll_joint" type="revolute">
    <parent link="wrist_pitch_link"/>
    <child link="gripper_roll_link"/>
    <origin xyz="1 0 0" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit effort="300" velocity="1" lower="-2.61799387799" upper="2.6128806087" />
    <dynamics damping="50" friction="1"/>
  </joint>

  <!-- J7 -->
  <joint name="gripper_grip_joint" type="revolute">
    <parent link="gripper_roll_link"/>
    <child link="gripper_grip_link"/>
    <origin xyz="1 0 0" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit effort="300" velocity="1" lower="-0.940841549903" upper="0.0" />
    <dynamics damping="50" friction="1"/>
  </joint>

</robot>